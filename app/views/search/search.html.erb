<div class="container">
  <div class="row">
    <h2 class="margin-left"><%= @offers.count %> <%= @offers.count < 2 ? "offer" : "offers"%> found</h2>
    <% @offers.each do |offer| %>
      <div class="col-xs-6 col-sm-4">
        <%= render 'shared/card', offer: offer %>
      </div>
    <% end %>
    <% if @offers.blank? %>
        <p>There are no offers containing the term <strong><%= params[:query] %></strong>.</p>
    <% end %>
  </div>
  <div id="map" data-markers="<%= @markers.to_json %>"></div>
</div>


