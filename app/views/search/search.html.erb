<div class="container">
  <div class="row">
    <% @offers.each do |offer| %>
      <div class="col-xs-6 col-sm-4">
        <%= render 'shared/card', offer: offer %>
      </div>
    <% end %>
    <% if @offers.blank? %>
        <p>There are no offers containing the term <strong><%= params[:q] %></strong>.</p>
    <% end %>
  </div>
</div>
