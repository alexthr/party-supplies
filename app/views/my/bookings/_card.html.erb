<div class="card-booking">
  <div class="card-photo"
     style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path booking.offer.photo %>');">
  </div>
  <div class="card-info">
    <div class="number-icon"></div>
    <p><%= booking.start_date.strftime("%Y %B %d") %> - <%= booking.end_date.strftime("%Y %B %d") %></p>
    <h2><%= booking.offer.title %>
      <br><%= booking.offer.price %>â‚¬
    </h2>
  </div>
  <div class="card-review">
    <h3>My review
    <br>Renter's rating
    </h3>
  </div>
  <div>
      <%= cl_image_tag cl_image_tag_or_not(booking.offer.user.avatar), class: "card-user-renter" %>
    <%= link_to '', offer_path(booking.offer), class: "card-link" %>
  </div>
</div>
