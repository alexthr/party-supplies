<div class="container text-center grid">
  <div class="card2 profile">
    <div class="card-content">
      <img src="<%= cl_image_path @user.avatar %>" alt="" width="150" class="img-circle">
      <h2><%= @user.username %></h2>
      <h1 class="color-font"><%= link_to edit_user_registration_path do %>
        <button class="btn btn-info offer-btn"><i class="fas fa-edit"></i>Edit profile</button>
      <% end %></h1>
    </div>
  </div>
  <div class="card2 bookings">
    <div><h5>Your bookings</h5></div>
    <% if @user.bookings.count < 1 %>
      <div><p>You don't have any bookings yet</p></div>
    <% else %>
      <div><p><%= @user.bookings.last.offer.title %></p></div>
    <% end %>
  </div>
  <div class="card2 offers">
    <h5>Your offers</h5>
    <% if @user.offers.count < 1 %>
      <p>You don't have any offers yet</p>
    <% else %>
      <p><%= @user.offers.last.title %></p>
    <% end %>
  </div>
  <div class="card2 inbox">
    <h5>Messages</h5>
    </div>
  <div class="card2 more-info">
    <div class="card-content">
      <h3>About <%= @user.username %></h3>
      <p class="text-justify">
      <%= @user.bio %>
      </p>
    </div>
  </div>
</div>
