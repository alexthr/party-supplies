<div class="photos-container">
  <div class="offer-photo" style="background-image: url('<%= cl_image_path @offer.photo %>'); background-position: center;">
  </div>
</div>

<div class="container">
  <div class="offer-wrapper">
    <div class="offer-info-container">
      <h5><%= @offer.category %></h5>
      <h1><%= @offer.title %></h1>
      <%= link_to edit_offer_path(@offer) do %>
        <button class="btn btn-primary"><i class="fas fa-edit"></i>Edit Offer</button>
      <% end %>
      <p><%= @offer.description %></p>
      <p><%= @offer.location %></p>
      <div id="map" style="background-image: url('https://badoocdn.com/big/g/64/22219.png'); background-size: cover;">
      </div>
    </div>
    <div class="booking-form">
      <p><strong><%= @offer.price %>â‚¬</strong> par jour</p>
      <%= render "shared/form" %>
    </div>
  </div>
</div>
