<div class="photos-container">
  <div class="offer-photo" style="background-image: url('<%= cl_image_path @offer.photo %>'); background-position: center;">
  </div>
</div>

<div class="container">
  <div class="offer-wrapper">
    <div class="offer-info-container">

     <h1 class="color-font"><%= @offer.title %></h1>
     <h5><%= @offer.category %></h5>
     <% if current_user == @offer.user %>
       <%= link_to edit_offer_path(@offer) do %>
         <button class="btn btn-primary offer-btn"><i class="fas fa-edit"></i>Edit Offer</button>
       <% end %>
     <% end %>

      <p><%= @offer.location %></p>
      <div id="map" data-markers="<%= @markers.to_json %>">
      </div>
    </div>
    <div class="booking-form">
      <p><strong><%= @offer.price %>â‚¬</strong> par jour</p>
      <%= render "shared/form" %>
    </div>
  </div>
  <% if current_user == @offer.user %>
    <%= link_to "Delete this offer", offer_path(@offer), method: "delete", style: "padding-left: 50px;" %>
  <% end %>
</div>






