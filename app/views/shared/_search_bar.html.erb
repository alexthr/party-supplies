<%= form_tag search_path, :method => "get", id: "search-form", class: "navbar-form" do %>
  <div class="input-group" >
    <%= text_field_tag :query, session[:query_param], placeholder: "Search Offers", class: 'form-control', id: "txtSearch" %>
    <div class="input-group-btn">
      <%= button_tag(type: "submit",name: nil, class: 'btn btn-default') do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
  </div>
<% end %>

