<%= form_tag search_path, :method => "get" do %>
  <div id="custom-search-input">
    <div class="input-group col-md-12 ">
      <%= text_field_tag :query, params[:query], placeholder: "Search Offers", class: "form-control input-lg" %>
      <div class="input-group-btn">
        <%= button_tag(type: "submit", name: nil, class: "btn btn-info btn-lg") do %>
          <i class="glyphicon glyphicon-search"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

